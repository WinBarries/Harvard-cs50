#include <iostream>
#include <string>
using namespace std;

void inchesFeet_cm();

int main() {

    inchesFeet_cm();

    return 0;
}

void inchesFeet_cm()

{
	//declaration
	float inches;
    float cmI;
	float feet;
	float cmF;

	//initialization

	inches = 0;
    cmI = 0;
	feet = 0;
    cmF = 0;
    int retry = 1;
    while (retry == 1 || retry == 1){
	cout << "please enter a length feet: ";

	cin >> feet;

    cout << "\t\t in inches: ";

	cin >> inches;
    if (feet >= 0 && inches >= 0) {

	cmF = feet * 30.48;

	cmI = inches * 2.54;

	cout << feet << "feet and "<<inches<<"inches  is equivalent to " << cmF << "feet and "<<cmI<<"inches" << endl;

	}
	else
        cout << "The value for length must be a positive number. \n";
        cout << "Please try again \n";
        retry = 1;

    }

  //  return 0;

}
